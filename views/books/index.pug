extends ../layout

block content
  title Books
  h1 Books
  p
    a.button(href="/books/new", class="btn") Create New Book
  table
    thead
      tr
        th 
          a.button(href="/books/title/asc", class="btn") Title
        th Author
        th Genre
        th Year
    each book in books
      tbody
        tr
          td
            a(href="/books/" + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.year